  margin-bottom: -1px;
  background-color: #424242;
}

a:link,
a:visited {
  color: #88888;
  text-decoration: none;
}

a:active /* Quand le visiteur clique sur le lien */ {
  background-color: blink;
}

a:hover {
  color: #888888;
  text-decoration: underline;
  transform: scale(1.5);
  transition: transform 400ms;
}

